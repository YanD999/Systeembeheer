#!/bin/bash
# zone name

# must be root
if [ "$EUID" -ne 0 ]
  then 
	echo "You have to be root to execute this"
	exit 0
fi

# if option -t
while getopts ":t:" opt; do
  if [ $opt == "t" ]
then
        RECORD="$OPTARG"
        SUB=$3
        IP=$4
        PARENT=$5
fi
done

# if no -t option
if [ -z "$RECORD" ]
then
        RECORD="A"
        SUB=$1
        IP=$2
        PARENT=$3
fi

# bij CNAME is sub en parent nodig
if [ "$RECORD" == "CNAME" ]
        then
                if [ -z "$SUB" ] || [ -z "$IP" ] || [ ! -z "$PARENT" ]
                        then echo "Geef een parent en subdomein in"
                        exit 0
                fi
# bij de rest is sub, ip en parent nodig
elif [ -z "$SUB" ] || [ -z "$IP" ] || [ -z "$PARENT" ]
        then echo "Geef een parent, een ip en een subdomein in"
        exit 0
fi

# case record type
echo "case" # wegdoen
case $RECORD in
        A)
                echo "$SUB      IN      A       $IP" >> "/etc/bind/zones/db.$PARENT"
                PATH = "/etc/bind/zones/db.$PARENT";;
        MX)
                echo "@ IN      MX      10      $SUB.$PARENT." >> "/etc/bind/zones/db.$PARENT"
                echo "$SUB      in      A       $IP" >> "/etc/bind/zones/db.$PARENT"
                PATH = "/etc/bind/zones/db.$PARENT";;
        CNAME)
                echo "$SUB      IN      CNAME   $IP." >> "/etc/bind/zones/db.$IP"
                PATH = "/etc/bind/zones/db.$IP";;
esac

# file aangepast, dus update serial
var="`grep -A 0 'Serial' $PATH | grep -oP '[0-9]*'`"
new=$((var+1))
sed -i "s/.*Serial.*/\t\t\t     $new\t\t; Serial/g" "$PATH"

# reload
rndc reload


# restart bind
systemctl restart bind9
